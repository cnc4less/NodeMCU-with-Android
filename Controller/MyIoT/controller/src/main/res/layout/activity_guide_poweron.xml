<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/textView_horizontal_margin"
        android:layout_marginRight="@dimen/textView_horizontal_margin"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginTop="@dimen/image_top_margin"
            android:layout_marginBottom="@dimen/image_bottom_margin"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/pic_guidepage_plugin" />
        <!--image resource form: http://static.iconarchive.com/show/beautiful-flat-icons-by-elegantthemes/plugin-icon.html-->

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size_large"
            android:textColor="@android:color/black"
            android:text="@string/guide_power_on" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/font_size_small"
        android:text="@string/notice_power_on"/>
</RelativeLayout>